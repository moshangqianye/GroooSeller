<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appback" >

    <ExpandableListView
        android:id="@+id/menu_manage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_tools"
        android:dividerHeight="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >
    </ExpandableListView>

    <LinearLayout
        android:id="@+id/menu_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#39000000"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="#00000000"
            android:drawableTop="@drawable/add_menu_button"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="新增"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout><!-- From: file:/home/runzii/文档/code/Studio/GroooSeller/groooSeller/src/main/res/layout/activity_menumanage.xml -->